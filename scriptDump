# Specify the CSV file path
$csvFilePath = "C:\path\to\your\file.csv"

# Specify the value you want to check for
$valueToCheck = "YourValueToCheck"

# Read the CSV file
$csvData = Import-Csv -Path $csvFilePath

# Initialize a flag to indicate if the value is found
$valueFound = $false

# Iterate through the rows and check the first column
foreach ($row in $csvData) {
    if ($row.'ColumnNameOfFirstColumn' -eq $valueToCheck) {
        $valueFound = $true
        break  # Exit the loop if the value is found
    }
}

# Check the flag and output the result
if ($valueFound) {
    Write-Host "The value '$valueToCheck' was found in the first column of the CSV file."
} else {
    Write-Host "The value '$valueToCheck' was not found in the first column of the CSV file."
}
