# Connect to Exchange Online
Connect-ExchangeOnline -UserPrincipalName youradmin@yourdomain.com -ShowProgress $true

# Define the distribution group name and the path to the text file
$DistributionGroupName = "YourDistributionGroup"
$MemberListFile = "C:\Path\To\TextFile.txt"

# Import the list of members from the text file
$Members = Get-Content $MemberListFile

# Add members to the distribution group
foreach ($Member in $Members) {
    Add-DistributionGroupMember -Identity $DistributionGroupName -Member $Member
}

# Disconnect from Exchange Online
Disconnect-ExchangeOnline -Confirm:$false
